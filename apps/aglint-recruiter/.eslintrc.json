{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true
  },
  "root": true,
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort",
    //"eslint-plugin-react-compiler", //causing issues in the build
    "jsx-a11y",
    "@aglint/linter"
  ],
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "next",
    "next/core-web-vitals",
    "prettier",
    "plugin:jsx-a11y/recommended",
    "plugin:security/recommended-legacy",
    "next/typescript" //reccomendded by next.js
  ],
  "ignorePatterns": [
    "node_modules",
    ".next",
    "devlink_queries",
    "devlink*",
    "src/components/Icons",
    "src/components/JobTracker/Activities/devlink",
    "src/types/*",
    ".github",
    "components/ui"
  ],
  "rules": {
    "no-console": ["error", { "allow": ["error"] }],
    "react-hooks/exhaustive-deps": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "simple-import-sort/exports": "error",
    "@aglint/linter/enforce-devlink-rules": "error",
    "security/detect-object-injection": "off",
    "@typescript-eslint/consistent-type-imports": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-unused-expressions": "off",
    "@typescript-eslint/no-require-imports": "off",
    "no-unused-vars": ["error", { "args": "all", "argsIgnorePattern": "^_" }], //ignore unused variables starting with _
    "@typescript-eslint/no-unused-vars": "off" //
  },
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "plugins": ["@aglint/linter"],
      "rules": {
        "@aglint/linter/enforce-devlink-rules": "error"
      }
    }
  ],
  "settings": {
    "next": {
      "rootDir": "apps/aglint-recruiter"
    }
  }
}
