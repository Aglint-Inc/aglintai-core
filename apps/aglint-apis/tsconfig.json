{
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    "target": "ES6",
    "esModuleInterop": true,
    "module": "CommonJS", // Change this line
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "lib": ["ES2021.String"],
    "paths": {}
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
