{
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2021",
    "esModuleInterop": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "lib": ["ES2021.String"],
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@/*": ["./src/*"],
      "@services/*": ["./src/services/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },

  "include": ["./src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
