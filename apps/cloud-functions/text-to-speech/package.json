{
  "name": "text-to-speech",
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@1.22.19",
  "engines": {
    "yarn": "^1.22.19"
  },
  "scripts": {
    "dev": "tsc && functions-framework --target helloHttp --port 8080",
    "gcp-build": "tsc",
    "start": "functions-framework --target helloHttp --port 8080",
    "tsconfig": "tsc --init",
    "deploy": "gcloud functions deploy  text-to-speech --gen2 --runtime=nodejs18 --region=us-west1 --source=. --entry-point=helloHttp --trigger-http --allow-unauthenticated --env-vars-file .env.yaml"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.1.6"
  }
}
