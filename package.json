{
  "name": "aglint-core",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "format": "turbo run format --",
    "lint": "turbo run lint --",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "supabase:dev": "turbo run supabase:dev",
    "supabase:local": "turbo run supabase:local",
    "pull": "git pull origin development --no-rebase",
    "prepare": "husky install"
  },
  "devDependencies": {
    "prettier": "^3.3.2",
    "turbo": "^2.0.14",
    "husky": "^8.0.0"
  },
  "packageManager": "npm@10.5.2",
  "engines": {
    "node": "^18.18.0 || >=20.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run format"
    ],
    "*.json": [
      "npm run format"
    ]
  }
}
