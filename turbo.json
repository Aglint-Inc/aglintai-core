{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "cache": true,
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    },
    "build:shared-utils": {
      "outputLogs": "new-only"
    },
    "format": {
      "dependsOn": [],
      "outputLogs": "errors-only"
    }
  }
}
